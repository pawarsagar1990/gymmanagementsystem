@model IPagedList<MyProject.Models.PackageDetail>
@using PagedList
@using PagedList.Mvc
@using MyProject.Models
@{
    ViewBag.Title = "PackageListForAdmin";
    Layout = "~/Views/Shared/AdminMaster.cshtml";
}


<form id="PackageEntry">


    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h2><strong>Package Entry</strong></h2>
                </div>
                <div class="panel-content">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Number of Month</label>
                                    <input class="form-control" name="NumberOfMonth" id="NumberOfMonth" placeholder="Enter Number of Month">
                                    @*@Html.ValidationMessageFor(m => m.NumberOfMonth, "", new { @class = "text-danger" })*@
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Package Group</label>
                                    <input class="form-control" name="Pkg_Month" id="Pkg_Month" placeholder="Enter Month or Year">
                                    @*@Html.ValidationMessageFor(m => m.Pkg_Month, "", new { @class = "text-danger" })*@
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Package Amount</label>
                                    <input class="form-control" name="Pkg_Ammount" id="Pkg_Ammount" placeholder="Enter Package Ammount">
                                    @*@Html.ValidationMessageFor(m => m.Pkg_Ammount, "", new { @class = "text-danger" })*@
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Package Description</label>
                                    <input class="form-control" name="Pkg_Description" id="Pkg_Description" placeholder="Enter Month or Year">
                                    @*@Html.ValidationMessageFor(m => m.Pkg_Month, "", new { @class = "text-danger" })*@
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Status</label>
                                    <input class="form-control" name="Flag" value="YES" id="Flag" type="checkbox">
                                    @*@Html.ValidationMessageFor(m => m.Flag, "", new { @class = "text-danger" })*@
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-embossed btn-primary">Save</button>
                                    <button type="Reset" class="btn btn-embossed btn-primary">Cancel</button>
                                </div>
                            </div>
                            <div class="col-md-6"></div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
                   

<div class="row">
    <div class="col-md-12">
       @Html.Partial("_PackageList")
    </div>
</div>

<script language="javascript">
    $(document).ready(function () {
        $("#PackageEntry").on('submit', function (e) {

            e.preventDefault();
            var $this = $(this);
            var dataToPost = $(this).serialize();

            $.post("/Admin/PackgeDataSave", dataToPost)
                .done(function (response, status, jqxhr) {
                    alert("Physical Assessment Successfully Added.");
                    window.location.href = '/Admin/PackageListForAdmin'
                })
                .fail(function (jqxhr, status, error) {
                    // this is the ""error"" callback
                })
        })
    });
</script>